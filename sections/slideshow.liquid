        },
        {
          "type": "text",
          "id": "subheading",
          "default": "Sub heading",
          "label": "Sub heading"
        },
        {
          "type": "color",
          "id": "sub_heading_text_color",
          "label": "Sub heading Color",
          "default": "#B4976C"
        },
        {
          "type": "textarea",
          "id": "heading",
          "default": "Image slide",
          "label": "t:sections.slideshow.blocks.slide.settings.heading.label"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h2",
              "label": "Small"
            },
            {
              "value": "h1",
              "label": "Medium"
            },
            {
              "value": "h0",
              "label": "Large"
            }
          ],
          "default": "h1",
          "label": "Heading size"
        },
        {
          "type": "select",
          "id": "heading_position",
