          ]
        },
        {
          "type": "textarea",
          "id": "description",
          "default": "Tell your brand's story through images",
          "label": "t:sections.slideshow.blocks.slide.settings.subheading.label"
        },
        {
          "type": "text",
          "id": "button_label",
          "default": "Button 1",
          "label": "t:sections.slideshow.blocks.slide.settings.button_label.label",
          "info": "t:sections.slideshow.blocks.slide.settings.button_label.info"
        },
        {
          "type": "header",
          "content": "Button one"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.slideshow.blocks.slide.settings.link.label"
        },
        {
          "type": "checkbox",
          "id": "button_arrow_icon_1",
          "label": "Enable arrow icon",
          "default": true
        },
        {
          "type": "select",
          "id": "button_type",
          "label": "Button type",
          "default": "secondary",
          "options": [
            {
              "value": "primary",
              "label": "Primary"
            },
            {
              "value": "secondary",
              "label": "Secondary"
            },
            {
              "value": "button-link",
              "label": "Button link"
            }
          ]
        },
        {
          "type": "text",
          "id": "button_label_2",
          "default": "Button 2",
          "label": "t:sections.slideshow.blocks.slide.settings.button_label.label",
          "info": "t:sections.slideshow.blocks.slide.settings.button_label.info"
        },
        {
          "type": "header",
          "content": "Button two"
        },
        {
          "type": "url",
          "id": "link_2",
          "label": "Button link 2"
        },
